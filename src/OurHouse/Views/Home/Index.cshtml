@using Microsoft.AspNetCore.Mvc.Localization
@using OurHouse.Extensions

@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = Localizer["Welcome"];
}

<div class="container pb-3">
    <div class="image-circle image-1 border-15 border-palette-light-1"></div>
    <div class="image-circle image-2 border-15 border-palette-light-2"></div>
    <div class="image-circle image-3 border-35 border-palette-dark-1"></div>

    <div class="text-1 text-center">
        <h1>@Localizer["Welcome"]</h1>
        <p class="text-margin">
            @Localizer["Welcome message OurHouse {0} DiscoverCortelazor {1}", new object[] 
            {
                Url.RouteUrlLang("OurHouse", ViewContext),
                Url.RouteUrlLang("DiscoverCortelazor", ViewContext)
            }]
        </p>
        <a href="@Url.RouteUrlLang("OurHouse", ViewContext)" class="custom-buttom">@Localizer["Our house"]</a>
    </div>
</div>

