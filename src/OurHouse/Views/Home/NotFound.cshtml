@using Microsoft.AspNetCore.Mvc.Localization
@using OurHouse.Extensions

@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = Localizer["PageNotFound"];
}

<div class="container pb-3">
    <div class="row">
        <div class="col-sm-12 col-md-12 text-center">
            <a class="fox-not-found" href="@Url.RouteUrlLang("Index", "es")" title="La Casita del Zorro">
                <img src="~/fox.svg" />
            </a>
        </div>
    </div>
    <div class="row text-not-found">
        <div class="text-center col-sm-12 col-md-12">
            <p><a href="@Url.RouteUrlLang("Index", "es")" title="La Casita del Zorro">Inicio</a> / <a href="@Url.RouteUrlLang("Index", "en")" title="La Casita del Zorro">Home</a></p>
        </div>
        <div class="col-sm-12 col-md-12 text-center">
            <h1>404 - @Localizer["PageNotFound"]</h1>
        </div>
        <div class="text-center col-sm-12 col-md-12">
            <p>Perharps this page is lost in some corner of Cortelazor</p>
        </div>
        <div class="text-center col-sm-12 col-md-12">
            <p>Quizás esta página está perdida en algún rincón de Cortelazor</p>
        </div>
    </div>
</div>

